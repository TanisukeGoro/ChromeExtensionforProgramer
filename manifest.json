{
    "manifest_version": 2,
    "name": "wipeyy - ",
    "version": "0.0.2",
    "description": "wipeyはショートカットで動画をワイプで呼び出せます。ワイプ動画は常に最前列に配置され、【再生・停止・10スキップ】も可能です。",
    "browser_action": {
        "default_icon": "./icon/icon_eye.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },

    "icons": {
        "128": "./icon/icon_eye.png"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": [
            "contents.js"
        ]
    }],
    "permissions": [
        "tabs",
        "storage"
    ],
    "commands": {
        "skip-10sec": {
            "description": "skip the video to 10sec",
            "global": true,
            "suggested_key": {
                "default": "Ctrl+Shift+6",
                "mac": "Ctrl+Shift+6"
            }
        },
        "previous-10sec": {
            "description": "skip the video to -10sec",
            "global": true,
            "suggested_key": {
                "default": "Ctrl+Shift+7",
                "mac": "Ctrl+Shift+7"
            }
        },
        "play-pause": {
            "description": "play/pause",
            "global": true,
            "suggested_key": {
                "default": "Ctrl+Shift+8",
                "mac": "Ctrl+Shift+8"
            }
        },
        "pip-switch": {
            "description": "pip/unpip",
            "global": true,
            "suggested_key": {
                "default": "Ctrl+Shift+9",
                "mac": "Ctrl+Shift+9"
            }
        }
    }
}